<%- include("header");%>

<div class="box" id="heading">
  <h1><%=title %></h1>
</div>

<div class="box">
  <% newItems.forEach(item => { %>
  <div class="iten">
    <input type="checkbox" />
    <p class="inline-block"><%= item %></p>
  </div>
  <% }) %>

  <form class="item" action="/todoList" method="POST">
    <input
      name="newItem"
      type="text"
      placeholder="Add new item"
      autocomplete="off"
    />
    <button type="submit" name="button" value="<%=title%>">+</button>
  </form>
</div>
<%- include("footer"); %>
